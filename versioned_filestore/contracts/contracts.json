{
  "build": {
    "paths": [
      "contracts/src/**/*.sol"
    ],
    "root": "./contracts",
    "sourceDir": "src",
    "buildDir": "build",
    "docsDir": "docs",
    "compilerFlags": "--optimize 0 --binary file --json-abi file --ast-json file --natspec-dev file"
  },
  "buildtests": {
    "paths": [
      "contracts/test/**/*.sol"
    ],
    "testDir": "test",
    "buildDir": "buildtest",
    "docsDir": "docs",
    "compilerFlags": "--optimize 0 --binary file --json-abi file --ast-json file --natspec-dev file"
  }
}